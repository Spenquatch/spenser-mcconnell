{
  "kind": "singleType",
  "collectionName": "subscribe_content",
  "info": {
    "singularName": "subscribe-content",
    "pluralName": "subscribe-contents",
    "displayName": "Subscribe Content",
    "description": "Content for the subscribe/newsletter page"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "page_title": {
      "type": "text",
      "required": true
    },
    "page_description": {
      "type": "text",
      "required": true
    },
    "newsletter_benefits": {
      "type": "json",
      "description": "Array of newsletter benefits/features"
    },
    "subscriber_count_text": {
      "type": "string",
      "default": "Join 100K+ developers."
    },
    "subscriber_avatars": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": ["images"]
    },
    "testimonials": {
      "type": "json",
      "description": "Array of testimonials with name, quote, avatar"
    },
    "form_placeholder": {
      "type": "string",
      "default": "Your email"
    },
    "form_button_text": {
      "type": "string",
      "default": "Subscribe"
    },
    "success_message": {
      "type": "string",
      "default": "Thanks for subscribing!"
    },
    "seo_title": {
      "type": "string"
    },
    "seo_description": {
      "type": "text"
    }
  }
}